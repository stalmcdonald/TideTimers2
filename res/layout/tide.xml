<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#0181B2" >
	
	<TextView 
	    android:text="City:" 
	    android:id="@+id/tvCity"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"> 
	</TextView>
	
	<EditText 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:id="@+id/etCity">
		<requestFocus></requestFocus>
	</EditText>
	
	<Button 
	    android:id="@+id/bPrediction" 
	    android:text="Predict"
		android:layout_height="wrap_content" 
		android:layout_width="match_parent"
		android:background="#FFF">
	</Button>
	
	<TextView android:text="Current Tidal Prediction" 
	    android:id="@+id/tvPrediction"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</TextView>
	
	<TextView android:text="Body of Water" 
	    android:id="@+id/tvWater"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</TextView>
	
	<TextView android:text="Name" 
	    android:id="@+id/tidesite"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="1">
	</TextView>
	
	<TextView android:text="Date" 
	    android:id="@+id/calendar"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="2">
	</TextView>
	<TextView android:text="Tidal Prediction" 
	    android:id="@+id/tidepre"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="3">
	</TextView>
	<TextView android:text="Wave Height" 
	    android:id="@+id/waveheight"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_column="1"
		android:layout_row="4">
	</TextView>

</LinearLayout>